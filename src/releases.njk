{% from 'button.njk' import button %}

<section class="u-container">
  <ul id="release_list" class="releases__list">
  </ul>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/showdown/2.1.0/showdown.min.js">
</script>
<script type="text/javascript">
const req = new Request(
    "https://api.github.com/repos/ravynsoft/ravynos/releases", {
    headers: {
        "Accept": "application/vnd.github+json",
        "X-GitHub-Api-Version": "2022-11-28"
    }
});
fetch(req)
    .then((response) => response.json())
    .then((data) => {
        const list = document.getElementById("release_list");
        for(const rls of data) {
            const item = document.createElement("li");
            const details = document.createElement("details");
            details.classList.add("release__item");

            const summary = document.createElement("summary");
            summary.classList.add("release__summary");
            
            // Flex container for summary content
            const summaryContent = document.createElement("div");
            summaryContent.classList.add("release__header");

            // Date
            const pubdate = new Date(rls.created_at);
            const dateSpan = document.createElement("span");
            dateSpan.classList.add("release__date");
            dateSpan.textContent = pubdate.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' });
            
            // Title
            const title = document.createElement("h3");
            title.classList.add("release__title");
            title.textContent = rls.name;

            // Version tag
            const tag = document.createElement("span");
            tag.classList.add("release__tag");
            tag.textContent = rls.tag_name;

            // Chevron icon
            const chevron = document.createElement("div");
            chevron.classList.add("release__chevron");
            chevron.innerHTML = `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>`;

            summaryContent.appendChild(dateSpan);
            summaryContent.appendChild(title);
            summaryContent.appendChild(tag);
            summaryContent.appendChild(chevron);
            summary.appendChild(summaryContent);

            // Details content
            const content = document.createElement("div");
            content.classList.add("release__content");
            
            // Links/Actions
            const actions = document.createElement("div");
            actions.classList.add("release__actions");
            
            const discussLink = document.createElement("a");
            discussLink.href = rls.discussion_url;
            discussLink.className = "button button--secondary button--small";
            discussLink.target = "_blank";
            discussLink.rel = "noopener noreferrer";
            discussLink.textContent = "Discuss on GitHub";

            const downloadLink = document.createElement("a");
            downloadLink.href = rls.html_url;
            downloadLink.className = "button button--primary button--small";
            downloadLink.target = "_blank";
            downloadLink.rel = "noopener noreferrer";
            downloadLink.textContent = "View Release";

            if (rls.discussion_url) actions.appendChild(discussLink);
            actions.appendChild(downloadLink);
            content.appendChild(actions);

            // Markdown body
            const body = document.createElement("div");
            body.className = "releases__markdown";
            const converter = new showdown.Converter();
            body.innerHTML = converter.makeHtml(rls.body);
            content.appendChild(body);

            details.appendChild(summary);
            details.appendChild(content);
            item.appendChild(details);
            list.appendChild(item);
        }});
</script>

</section>
